<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- ================== BEGIN BASE CSS STYLE ================== -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="~/Areas/Admin/Assets/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/animate.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/style.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/style-responsive.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/css/theme/default.css" rel="stylesheet" id="theme" />
    <!-- ================== END BASE CSS STYLE ================== -->
    <!-- ================== BEGIN BASE JS ================== -->
    @*<script src="~/Areas/Admin/Assets/plugins/pace/pace.min.js"></script>*@
    <!-- ================== END BASE JS ================== -->
    @RenderSection("styles", required: false);
</head>
<body>
    <!-- begin #page-loader -->
    @*<div id="page-loader" class="fade in"><span class="spinner"></span></div>*@
    <!-- end #page-loader -->
    <!-- begin #page-container -->
    <div id="page-container" class="page-container fade page-sidebar-fixed page-header-fixed">
        <!-- begin #header -->
        <div id="header" class="header navbar navbar-default navbar-fixed-top">
            <!-- begin container-fluid -->
            <div class="container-fluid">
                <!-- begin mobile sidebar expand / collapse button -->
                <div class="navbar-header">
                    <a href="index.html" class="navbar-brand"><span class="navbar-logo"></span> Color Admin</a>
                    <button type="button" class="navbar-toggle" data-click="sidebar-toggled">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <!-- end mobile sidebar expand / collapse button -->
                <!-- begin header navigation right -->
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form class="navbar-form full-width">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Enter keyword" />
                                <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </li>
                    <li class="dropdown navbar-user">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="~/Areas/Admin/Assets/img/user-13.jpg" alt="" />
                            <span class="hidden-xs">@User.Identity.GetUserName()</span> <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu animated fadeInLeft">
                            <li class="arrow"></li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
                            {
                                @Html.AntiForgeryToken()
                            }

                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a></li>

                        </ul>
                    </li>
                </ul>
                <!-- end header navigation right -->
            </div>
            <!-- end container-fluid -->
        </div>
        <!-- end #header -->
        <!-- begin #sidebar -->
        <div id="sidebar" class="sidebar">
            <!-- begin sidebar scrollbar -->
            <div data-scrollbar="true" data-height="100%">
                <!-- begin sidebar user -->
                <ul class="nav">
                    <li class="nav-profile">
                        <div class="info">
                            chuognhh@gmail.com
                        </div>
                    </li>
                </ul>
                <!-- end sidebar user -->
                <!-- begin sidebar nav -->
                <ul class="nav">
                    <li class="nav-header">Navigation</li>

                    <li><a href="/quan-tri"><i class="fa fa-laptop"></i> <span>Dashboard</span></a></li>


                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-user-circle-o"></i>
                            <span>Người dùng </span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="/quan-tri/nguoi-dung">Danh sách</a></li>
                            <li><a href="/quan-tri/nguoi-dung/them">Tạo người dùng</a></li>
                        </ul>
                    </li>

                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-suitcase"></i>
                            <span>Chuyên mục </span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="/quan-tri/chuyen-muc">Danh sách</a></li>
                            <li><a href="/quan-tri/chuyen-muc/them">Tạo chuyên mục</a></li>
                        </ul>
                    </li>

                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-file-o"></i>
                            <span>Bài viết </span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="/quan-tri/bai-viet">Danh sách</a></li>
                            <li><a href="/quan-tri/bai-viet/them">Tạo bài viết</a></li>
                        </ul>
                    </li>

                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-comment-o"></i>
                            <span>Bình luận</span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="/quan-tri/binh-luan">Danh sách</a></li>
                            <li><a href="/quan-tri/binh-luan/them">Tạo bình luận</a></li>
                        </ul>
                    </li>

                    <li class="has-sub">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-tags"></i>
                            <span>Thẻ</span>
                        </a>
                        <ul class="sub-menu">
                            <li><a href="/quan-tri/the">Danh sách</a></li>
                            <li><a href="/quan-tri/the/them">Tạo thẻ</a></li>
                        </ul>
                    </li>

                    <li><a href="/trang-chu" target="_blank"><i class="fa fa-home"></i> <span>Đến trang chủ</span></a></li>

                    <!-- begin sidebar minify button -->
                    <li><a href="javascript:;" class="sidebar-minify-btn" data-click="sidebar-minify"><i class="fa fa-angle-double-left"></i></a></li>
                    <!-- end sidebar minify button -->
                </ul>
                <!-- end sidebar nav -->
            </div>
            <!-- end sidebar scrollbar -->
        </div>
        <div class="sidebar-bg"></div>
        <!-- end #sidebar -->
        <!-- begin #content -->
        <div id="content" class="content">
            <!-- begin breadcrumb -->
            <ol class="breadcrumb pull-right">
                @*<li><a href="javascript:;">Home</a></li>
                <li><a href="javascript:;">Page Options</a></li>
                <li class="active">Blank Page</li>*@
            </ol>
            <!-- end breadcrumb -->
            <!-- begin page-header -->
            @*<h1 class="page-header">@ViewBag.Title <small>@ViewBag.Title</small></h1>*@
            <!-- end page-header -->


            @RenderBody()
        </div>
        <!-- end #content -->
        <!-- begin scroll to top btn -->
        <a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"><i class="fa fa-angle-up"></i></a>
        <!-- end scroll to top btn -->
    </div>
    <!-- end page container -->
    <!-- ================== BEGIN BASE JS ================== -->
    <script src="~/Areas/Admin/Assets/plugins/jquery/jquery-1.9.1.min.js"></script>
    <script src="~/Areas/Admin/Assets/plugins/jquery/jquery-migrate-1.1.0.min.js"></script>
    <script src="~/Areas/Admin/Assets/plugins/jquery-ui/ui/minified/jquery-ui.min.js"></script>
    <script src="~/Areas/Admin/Assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!--[if lt IE 9]>
        <script src="~/Areas/Admin/Assets/crossbrowserjs/html5shiv.js"></script>
        <script src="~/Areas/Admin/Assets/crossbrowserjs/respond.min.js"></script>
        <script src="~/Areas/Admin/Assets/crossbrowserjs/excanvas.min.js"></script>
    <![endif]-->
    <script src="~/Areas/Admin/Assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Areas/Admin/Assets/plugins/jquery-cookie/jquery.cookie.js"></script>
    <!-- ================== END BASE JS ================== -->
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->

    @RenderSection("scripts", required: false)
    <script src="~/Areas/Admin/Assets/js/apps.min.js"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->

    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>
</body>
</html>


